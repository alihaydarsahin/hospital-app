# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text diff=python
*.pyw text diff=python
requirements*.txt text
*.toml text
*.yaml text
*.yml text

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Documentation
*.md text diff=markdown
*.txt text
LICENSE text

# Web files
*.html text diff=html
*.css text diff=css
*.js text
*.json text

# Database
*.db binary
*.sqlite binary
*.sqlite3 binary

# Images
*.png binary
*.jpg binary
*.gif binary
*.ico binary
*.svg text

# Fonts
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary

# Exclude files from exporting
.gitattributes export-ignore
.gitignore export-ignore
.gitkeep export-ignore 